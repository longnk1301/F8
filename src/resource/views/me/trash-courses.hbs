<div class="mt-4">
  <div>
    <a href="/me/trash/courses">Courses lists</a>
    <h1>My courses deleted</h1>
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Level</th>
        <th scope="col">Created At</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.name}}</td>
        <td>{{this.level}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="" class="btn btn-link btn-restore-course" data-id="{{this._id}}">Restore</a>
          <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
            data-target="#deleteModal">Destroy</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">Trash empty!
          <a href="me//storedcourses">Courses lists</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!-- Confirm delete modal --}}
<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete course</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you ready delete this course?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{!-- delete form hidden --}}
<form method="POST" name="delete-form"></form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var btnRestoreCourse = $('.btn-restore-course');

    //restore course clicked
    btnRestoreCourse.click(function (event) {
      event.preventDefault();
      const courseId = $(this).data('id');
    });
  });
</script>