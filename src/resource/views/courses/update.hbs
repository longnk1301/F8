<div class="mt-4">
  <h3>Update a new course</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="" value={{course.name}}>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description"
        placeholder="">{{course.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input type="text" class="form-control" id="videoId" name="videoId" placeholder="" value={{course.videoId}}>
    </div>

    <div class="form-group">
      <label for="level">Level</label>
      <input type="text" class="form-control" id="level" name="level" placeholder="" value={{course.level}}>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>